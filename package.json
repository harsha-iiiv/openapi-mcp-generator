{
  "name": "openapi-mcp-generator",
  "version": "2.5.0-beta.0",
  "description": "Generates MCP server code from OpenAPI specifications",
  "license": "MIT",
  "author": "Harsha",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "openapi-mcp-generator": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
